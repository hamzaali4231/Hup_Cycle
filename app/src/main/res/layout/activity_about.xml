<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView43"
        android:orientation="horizontal"
        android:paddingTop="15sp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView37"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/textView37"
                android:layout_marginEnd="19dp"
                android:layout_marginLeft="12sp"
                android:layout_marginRight="19dp"
                android:layout_weight="1"
                android:paddingLeft="20sp"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtDay"
                android:layout_alignBottom="@+id/txtDay"
                android:layout_alignEnd="@+id/textView39"
                android:layout_alignRight="@+id/textView39"
                android:layout_marginEnd="35dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtMinute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtSecond"
                android:layout_alignEnd="@+id/textView31"
                android:layout_alignRight="@+id/textView31"
                android:layout_alignBottom="@+id/txtSecond"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtHour"
                android:layout_alignBottom="@+id/txtHour"
                android:layout_toEndOf="@+id/textView24"
                android:layout_toRightOf="@+id/textView24"
                android:layout_weight="1"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tveventStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtSecond"
                android:layout_alignBottom="@+id/txtSecond"
                android:layout_toEndOf="@+id/textView30"
                android:layout_toRightOf="@+id/textView30"
                android:layout_weight="1"
                android:textSize="24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:text="Days"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView41"
            android:layout_alignBottom="@+id/textView41"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"
            android:layout_toEndOf="@+id/textView36"
            android:layout_toRightOf="@+id/textView36"
            android:text="Hours"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textView40"
            android:layout_toRightOf="@+id/textView40"
            android:text="Minutes"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/textView41"
            android:layout_toRightOf="@+id/textView41"
            android:text="Seconds"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="Opening time"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>